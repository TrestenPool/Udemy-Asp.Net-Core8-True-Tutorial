@{
  ViewData["title"] = "Countries controller page";
  var ErrorMessage = ViewData["ErrorMessage"];
  var SuccessMessage = ViewData["SuccessMessage"];
}
<h1>Countries controller page</h1>

<form 
  asp-controller="Countries" 
  asp-action="UploadFromExcel"  
  method="POST" 
  enctype="multipart/form-data" 
  required >

  <div class="form-field flex">

    <div class="w-25">
      <label class="form-label pt">Choose an xlsx file</label>
    </div>

    <div class="flex-1">
      <input type="file" name="excelFile" class="form-input" accept=".xlsx">
      <div class="text-red">@ErrorMessage</div>
      <div class="text-green">@SuccessMessage</div>
    </div>

  </div>

  <div class="form-field flex">
    <div class="w-25"></div>
    <div class="flex-1">
      <button type="submit" class="button button-green-back">Upload</button>
    </div>
  </div>

</form>