@model IEnumerable<PersonResponse>
@{
  // specify no layout to be used
  Layout=null;
}

  <link rel="stylesheet" href="@("http://" + Context.Request.Host.ToString() + "/StyleSheet.css")">

  <!-- Table -->
  <table class="table w-100 mt">
    <thead>
      <tr>
        <th>Person Name</th>
        <th>Email</th>
        <th>Date of birth</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Receive News Letter</th>
        <th>Country</th>
      </tr>
    </thead>
    <tbody>
      @foreach(PersonResponse person in Model){
        <tr>
          <td style="width:15%">@person.PersonName</td>
          <td style="width:15%">@person.Email</td>
          <td style="width:15%">@person.DateOfBirth?.ToString("dd MMM yyyy")</td>
          <td style="width:15%">@person.Age</td>
          <td style="width:15%">@person.PersonGender</td>
          <td style="width:15%">@person.ReceiveNewsLetters</td>
          <td style="width:15%">@person.Country</td>
        </tr>
      }
    </tbody>

  </table>